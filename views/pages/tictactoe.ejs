                    <h2 class="golden-text"> Tic-Tac-Toe</h2>
                </div>

            </div>
            <br>
            <br>
            <div class="container">
                <form>
                  <div class="form-group row">
                    <label for="player1" class="col-sm-2 col-form-label">Player 1:</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="player1_id" placeholder="player1_name">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="player2" class="col-sm-2 col-form-label">Player 2:</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="player2_id" placeholder="player2_name">
                    </div>
                  </div>
                  <br>
                  <div class="form-group row">
                    <div class="col-sm-5 ">
                      <button type="button" class="btn btn-primary" id="beginPlayButton">Begin Play</button> <!-- removed inline javascript onclick="begin_play()"-->
                      <button type="button" class="btn btn-primary" id="resetPlayButton">Reset Play</button> <!-- removed inline javascript onclick="reset_play()"-->
                    </div>
                  </div>
                </form>
            </div>
            <div class ="container">
            
                <div id ="turn_info">
                    Game has not begin.
                </div>
                <br/>
            </div>
            
            <div class="container">
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <td class="text-center" id="A1">A1</td>
                  <td class="text-center" id="A2">A2</td>
                  <td class="text-center" id="A3">A3</td>
                </tr>
                <tr>
                  <td class="text-center" id="B1">B1</td>
                  <td class="text-center" id="B2">B2</td>
                  <td class="text-center" id="B3">B3</td>
                </tr>
                <tr>
                  <td class="text-center" id="C1">C1</td>
                  <td class="text-center" id="C2">C2</td>
                  <td class="text-center" id="C3">C3</td>
                </tr>
              </tbody>
            </table>
            </div>
            
            <div class="container">
                <form>
                <div class="form-group row">
                    <label for="player1" class="col-sm-2 col-form-label">Move:</label>
                    <div class="col-sm-5">
                      <input type="text" class="form-control" id="moveInput" placeholder="Cell Number for Example: A1"> <!-- removed inline javascript onkeydown="moveEnter(event)"-->
                  </div>
                  <div class="col-sm-5">
                      <button type="button" class="btn btn-primary" id="playButton">Play</button> <!-- removed inline javascript onclick="play();"-->
                   </div>
                  </div>
                </form>
            
            </div>

