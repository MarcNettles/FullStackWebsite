<!-- signup.ejs is a separate page where the user can either log in or sign up. User name and their hashed passwords
    will be stored in the back-end database (I will probably use pg-promise in app.js to get a connection to a PostgreSQL DB)-->



<!-- Boilerplate HTML5 start -->
<!DOCTYPE html>
<html lang="en">

    <!-- Using EJS to include partials for the head, check head.ejs for more-->
    <head>
        <%- include("../partials/head/") -%>


        <!-- Including some extra stuff for this page, such as the css stylesheet signup.css and the javascript to
            handle the signup modal pop-up password checking with signup.js -->

        <!-- TESTING : BIG ISSUE => It isn't finding the href="signup.css", and I've tried many different permutations-->
        <link rel="stylesheet" type="text/css" href="/stylesheets/signup.css">
        <script type="text/javascript" src="/javascripts/signup.js"></script>

    </head>

    
    <body>

        <%- include('../partials/banner') -%>
        <!-- Header also included with EJS, check header.ejs for more.
        Class made "sticky-top" so that it stays at the top even when scrolling down -->
        <header class="sticky-top">
            <%- include("../partials/navbar") -%>
        </header>

        <!-- Main part of the page-->
        <main>

            <!-- Just some text at the top of the screen-->
            <div class="container text-sm-center p-5 bg-warning" style="height:200px;">
                <p class="display-5"> Login/Signup Page</h1>
                <p> This page is designed to showcase a separate login and signup page. All passwords are hashed before they are stored, so nobody (not even me) can look up your username/password combo.</p>
            </div>
            <br>


            <!-- TODO: Make login section nicer than this.-->
            <div class="container-sm px-5">
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <form id="signup_form_login" action="/login">

                            <!-- Username field and label-->
                            <label for="username">User Name:</label><br>
                            <input type="text" id="username" placeholder="Username"><br>
                            
                            <!-- Password field and label-->
                            <label for="password">Password:</label>
                            <input type="password" id="password" placeholder="Password"><br>
                            
                            <!-- Submit button-->
                            <input type="submit" value="Submit">

                        </form>
                    </div>
                    <div class="col"></div>
                </div>
            </div>
            <!-- The button to open the sign up modal window-->
            <div class="text-center">
                
                <!--<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-target="#myModal">Sign Oop</button>
                -->
                <a href="#myModal" class="btn btn-info" data-bs-toggle="modal" onclick="openModal()"> Sign Up</a>
                
            </div>            
            <br>

            <!-- This is the actual Signup Modal-->
            <div id="myModal" class="modal fade">
                <div class="modal-dialog modal-login">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="avatar">
                                <img src="https://www.tutorialrepublic.com/examples/images/avatar.png" alt="Avatar">
                            </div>
                            <h4 class="modal-title">Sign Up page</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <input type="text" class="form-control" name="firstName" placeholder="First Name"
                                    required="required">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="lastName" placeholder="Last Name"
                                    required="required">
                            </div>
                            <div class="form-group">
                                <input id="psw" type="password" class="form-control" name="password" placeholder="Password"
                                    required="required">
                            </div>
                            <div class="form-group">
                                <input id="cpsw" type="password" class="form-control" name="confirm password"
                                    placeholder="Confirm Password" required="required">
                            </div>
                            <div class="form-group">
                                <button id="my_submit_button" class="btn btn-primary btn-block login-btn" disabled
                                    onClick="onClickFunction()">Sign Up</button>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div id="message" style="display:block">
                                <h3>Password must contain the following:</h3>
                                <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                                <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                                <p id="number" class="invalid">A <b>number</b></p>
                                <p id="length" class="invalid">Minimum <b>8 characters</b></p>
                                <p id="match" class="invalid">Password and Confirm Password Match</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </main>

    </body>
    <footer role="contentinfo" class="text-center bg-dark sticky-bottom">
        <%- include("../partials/footer") -%>
    </footer>
</html>